<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.irfanhamdani_1202150092_modul4.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="30dp">


        <TextView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button_listnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="List Nama Mahasiswa" />

        <Button
            android:id="@+id/button_imagesearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_listnama"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="PENCARIAN GAMBAR" />

    </LinearLayout>

</LinearLayout>